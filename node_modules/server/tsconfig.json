{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "listFiles": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true
  },
  "include": [
    "actions/**/*.ts",
    "common/**/*.ts",
    "lib/**/*.ts",
    "tsw/**/*.ts",
    "twitch/**/*.ts",
    "typings/**/*.d.ts",
    "node_modules/winston-daily-rotate-file/index.js"
  ],
  "exclude": [
//    "node_modules"
  ]
}
