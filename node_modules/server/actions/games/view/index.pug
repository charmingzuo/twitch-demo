extends ../../../common/view/template.pug

block title
    | 鹅蛋

block header
    script.

block body
    script
        include ../client.js

    - template = locals.data.template;
    - page = locals.data.page;

    h1= template.title

    ul
        each gameItem in page.games
            - var it = gameItem.game;
            - var pic = it.box.small;
            - var size = pic.match(/(\d+)x(\d+)\.(jpg|png)/i) || [];

            li
                a(href="streams?game=" + it.name, style="display: block;")
                    img(src=pic style='width:' + (size[1] || '') + 'px; height:' + (size[2] || '') + 'px;')
                    p=it.name
                    span
                        =it.popularity
                        | 人观看

    section
        button(data-action='back') 上一页
        button(data-action='next') 下一页