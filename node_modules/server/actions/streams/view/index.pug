extends ../../../common/view/template.pug
include ../../../common/view/mixin/image.pug

block title
    | 鹅蛋

block header
    script.

block body
    script
        include ../client.js

    - template = locals.data.template;
    - page = locals.data.page;

    h1= template.title

    ul
        if page.streams
            each it in page.streams
                li(data-channel-id=it._id)
                    +image(it.preview.large)
                    p
                        | 游戏：
                        = it.game
                    p
                        | 观看人数：
                        = it.viewers
                    p
                        | 频道：
                        = it.channel.display_name
                    +image(it.channel.logo)



    section
        button(data-action='back') 上一页
        button(data-action='next') 下一页