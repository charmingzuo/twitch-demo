header#actions
    each action in ['/games']
        - var current = action == locals.data.req.pathname;
        button(data-action="go" data-pathname=action style=current ? 'font-weight:bold;' : '')
            =action

    script.
        $(function () {
            $('#actions').find('[data-action="go"]').on('click', function (e) {
                location.href = this.dataset.pathname;
            });
        });
